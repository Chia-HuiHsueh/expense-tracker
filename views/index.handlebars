<form action="/records/category" method="GET">
  <select name="category" class="form-control" id='inputType' onChange="this.form.submit()" style="cursor: pointer;">
    <option value="" disabled selected>Category</option>
    {{#if keyword}}<option value="{{keyword}}" selected>{{keyword}}</option>{{/if }}
    <option value="home">home</option>
    <option value="transportation">transportation</option>
    <option value="entertainment">entertainment</option>
    <option value="food">food</option>
    <option value="other">other</option>
  </select>
</form>
{{#if keyword}} <a href="../"><button>Back</button></a>{{/if }}
<h1>Total:{{this.totalAmount}}</h1>
<ul>
  {{#each records}}
  <li>
    {{this.name}}
    {{this.date}}
    {{this.category_ch}}
    {{this.merchant}}
    {{this.amount}}
    <a href="./records/{{ this._id }}/edit">編輯</a>
    <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
      <button type="submit">delete</button>
    </form>
  </li>
  {{/each}}
</ul>
<a href="/records/new">新增一筆支出</a>