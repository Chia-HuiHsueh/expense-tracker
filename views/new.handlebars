<div class="container">
  <div class="create-list">
    <div class="create-list-title mb-3">
      <h2 class="display-5">請輸出你的支出</h2>
    </div>
    <form action="/records" method="POST" class="create-list-form mb-3">
      <div class="form-group row">
        <label for="require" class="col-sm-4 col-form-label">*必填欄位</label>
      </div>
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">名稱*：</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="消費品項" name="name" required>
        </div>
      </div>

      <div class="form-group row">
        <label for="date" class="col-sm-2 col-form-label">日期*：</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" name="date" required>
        </div>
      </div>

      <div class="form-group row">
        <label for="category_ch" class="col-sm-2 col-form-label">類別*：</label>
        <div class="col-sm-10">
          <select id="category_ch" class="form-control" name="category_ch" placeholder="選擇支出類型" autocomplete="off"
            required>
            <option value="" disabled selected>選擇類型*：</option>
            {{#each categories}}
            <option value="{{this.category_ch}}">{{this.category_ch}}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="form-group row">
        <label for="merchant" class="col-sm-2 col-form-label">商店：</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="消費的店家" name="merchant">
        </div>
      </div>
      <div class="form-group row">
        <label for="amount" class="col-sm-2 col-form-label">金額*：</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" placeholder="花了多少錢" name="amount" min="0" step="1" required>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-info">新增支出</button>
        </div>
      </div>
    </form>

    <div class="d-flex justify-content-center ">
      <a href="/">
        <button type="submit" class="btn btn-primary">回到首頁</button></a>
    </div>
  </div>
</div>