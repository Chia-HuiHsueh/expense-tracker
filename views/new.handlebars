<form action="/records" method="POST">
  <label for="name">名稱</label>
  <input type="text" placeholder="消費品項" name="name" required>

  <label for="date">日期</label>
  <input type="date" name="date" required>

  <label for="category_ch">類別</label>
  <select id="category_ch" class="form-control" name="category_ch" placeholder="選擇支出類型" autocomplete="off" required>
    <option value="" disabled selected>選擇類型</option>
    {{#each categories}}
    <option value="{{this.category_ch}}">{{this.category_ch}}</option>
    {{/each}}
  </select>

  <label for="merchant">商店</label>
  <input type="text" placeholder="消費的店家" name="merchant">

  <label for="amount">消費金額</label>
  <input type="number" placeholder="花了多少錢" name="amount" min="0" step="1" required>

  <button type="submit">新增支出</button>
</form>

<a href="/">回到首頁</a>